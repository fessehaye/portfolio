    <body class="">
        <div class="w-full min-h-screen xl:h-screen relative">
            {% include "../components/_animated-bg.njk" %}
            <div class="hero-content">
                {{ content | safe }}
            </div>
        </div>
        <script defer="async">
            document
                .body
                .classList
                .add("hidden");
        </script>
        <script defer="async" src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.5.1/gsap.min.js"></script>
        <script defer="async" src="/js/index.js"></script>
        <script>
            if ('serviceWorker' in navigator) {
                window.addEventListener('load', () => {
                    navigator
                        .serviceWorker
                        .register('/service-worker.js');
                });
            }
        </script>

    </body>
</html>